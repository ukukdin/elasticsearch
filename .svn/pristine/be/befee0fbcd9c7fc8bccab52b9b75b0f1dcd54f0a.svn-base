      <bean id="elasticSearchService" class="nurier.scraping.elasticsearch.ElasticsearchService"></bean>
    <bean id="serverInformation" class="nurier.scraping.common.support.ServerInformation">
        <!-- [WAS IP Address] -->
        <property name="wasIpAddressOfDevelopmentServer"                  value="${was.development.server.ip}" />
        
        <!--  Elasticsearch info -->
        <property name="searchEngineOperationServerIP"                    value="${searchEngine.operation.server.ip}" />
        <property name="searchEngineOperationServerPort"                  value="${searchEngine.operation.server.port}" />
       
        <property name="searchEngineDevelopmentServerIP"                  value="${searchEngine.development.server.ip}" />
        <property name="searchEngineDevelopmentServerPort"                value="${searchEngine.development.server.port}" />
        
        <property name="searchEngineOperationServerList"                  value="${searchEngine.operation.server.list}" />
        <property name="searchEngineDevelopmentServerList"                value="${searchEngine.development.server.list}" />
        
        <!-- [DetectionEngine::DevelopmentServer] -->
        <property name="detectionEngine01DevelopmentServer"            value="${detectionEngine.01.development.server}"           />
        
        
        <property name="kafkaOperationBootstrapServerList"                value="${kafka.operation.bootstrap.server.list}" />
        <property name="kafkaDevelopmentBootstrapServerList"              value="${kafka.development.bootstrap.server.list}" />
        
        <!-- REDIS -->
        <property name="redisOperationServerList"                         value="${redis.operation.server.list}" />
        <property name="redisDevelopmentServerList"                       value="${redis.development.server.list}" />
        

        
        
    </bean>
    
    
</beans>